<div class="row justify-content-center">
  <div class="col-md-8 offset-md-4">
    <%= form_for @post do |f| %>
      <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do | error| %>
          <%= js add_gritter(error, title: "Overtime App Notification", sticky: false, image: :notice)%>
        <% end %>
      <% end %>
      <div class="form-gorup">
        <%= f.label :date %>
        <%= f.date_field :date, class: "form-control" %>
      </div>
      <div class="form-gorup">
        <%= f.label :rationale %>
        <%= f.text_field :rationale, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.radio_button :status, "submitted" %>
        <%= f.label :status, "Submitted" %>

        <%= f.radio_button :status, "approved" %>
        <%= f.label :status, "Approved" %>

        <%= f.radio_button :status, "rejected" %>
        <%= f.label :status, "Rejected" %>    
      </div>

      <div class="form-gorup">
        <%= f.submit "Save", class: "btn btn-outline-success"%>
      </div>

    <% end %>
  </div>

</div>
